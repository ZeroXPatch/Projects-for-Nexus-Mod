<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>WildSwimmingDucks</AssemblyName>
    <RootNamespace>WildSwimmingDucks</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <ModFolderName>WildSwimmingDucks</ModFolderName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude the i18n and assets folders from compiling into the DLL, 
         but copy them to the output folder -->
    <None Include="i18n\*.json" CopyToOutputDirectory="Always" />
    <None Include="manifest.json" CopyToOutputDirectory="Always" />
  </ItemGroup>

</Project>